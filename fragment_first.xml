<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Judul "Register" -->
        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:text="Register"
            android:textSize="25sp"
            android:textStyle="bold" />


        <!-- Username EditText -->
        <EditText
            android:id="@+id/username"
            android:layout_width="362dp"
            android:layout_height="47dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:layout_below="@id/Title"
            android:layout_marginTop="50dp"
            android:textColorHint="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_edittext_bg"
            android:hint="Username"/>


        <!-- Email EditText -->
        <EditText
            android:id="@+id/email"
            android:layout_width="362dp"
            android:layout_height="47dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:layout_marginTop="12dp"
            android:layout_below="@id/username"
            android:layout_centerHorizontal="true"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_edittext_bg"
            android:textColorHint="#FFFFFF"
            android:hint="Email" />


        <!-- Phone EditText -->
        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="362dp"
            android:layout_height="47dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:layout_marginTop="12dp"
            android:layout_below="@id/email"
            android:layout_centerHorizontal="true"
            android:inputType="number"
            android:background="@drawable/rounded_edittext_bg"
            android:textColorHint="#FFFFFF"
            android:hint="Phone"/>


        <!-- Password EditText -->
        <EditText
            android:id="@+id/password"
            android:layout_width="362dp"
            android:layout_height="47dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:layout_marginTop="12dp"
            android:layout_below="@id/phoneNumber"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_edittext_bg"
            android:textColorHint="#FFFFFF"
            android:hint="Password"
            android:inputType="textPassword"/>


        <!-- Checkbox for User Agreement -->
        <CheckBox
            android:id="@+id/Checks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/password"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="12dp"
            android:text="By creating this account, you agree to our Terms and Conditions."
            android:textColor="#757575"
            android:textColorLink="@color/highlight"
            android:textSize="11sp" />


        <!-- Register Button -->
        <Button
            android:id="@+id/btnToSecond"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/highlight"
            android:text="Register"
            android:layout_below="@id/Checks"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"/>


        <!-- TextView for Login Link -->
        <TextView
            android:id="@+id/Already"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnToSecond"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Already have an Account? Log in"
            android:textSize="14sp" />


        <Button
            android:id="@+id/logInButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnToSecond"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="-29dp"
            android:layout_toRightOf="@id/Already"
            android:background="@android:color/transparent"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:padding="0dp"
            android:shadowColor="@color/white"
            android:text="Log In"
            android:textColor="@color/highlight"
            android:textSize="8sp" />

    </LinearLayout>
</FrameLayout>
